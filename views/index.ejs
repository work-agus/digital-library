<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Digital Library</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
        }
    </script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
    <script>
        // Check for saved user preference, if any, on load of the website
        if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            document.documentElement.classList.add('dark')
        } else {
            document.documentElement.classList.remove('dark')
        }
    </script>
</head>

<body class="bg-gray-50 text-gray-800 min-h-screen dark:bg-gray-900 dark:text-gray-100 transition-colors duration-200">

    <!-- Navbar -->
    <nav
        class="bg-white shadow-sm sticky top-0 z-50 dark:bg-gray-800 dark:border-gray-700 transition-colors duration-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16 items-center">
                <div class="flex items-center">
                    <i class="fas fa-book-reader text-indigo-600 text-2xl mr-3 dark:text-indigo-400"></i>
                    <h1 class="text-xl font-bold text-gray-900 dark:text-white">My Library</h1>
                </div>
                <div class="flex items-center gap-4">
                    <button id="themeToggle"
                        class="text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200 focus:outline-none">
                        <i class="fas fa-moon hidden dark:block"></i>
                        <i class="fas fa-sun block dark:hidden"></i>
                    </button>
                    <button onclick="document.getElementById('uploadModal').classList.remove('hidden')"
                        class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-md text-sm font-medium transition flex items-center dark:bg-indigo-500 dark:hover:bg-indigo-600">
                        <i class="fas fa-plus mr-2"></i> Upload Book
                    </button>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">

        <% if (books.length===0) { %>
            <div class="text-center py-20">
                <div class="mb-4">
                    <i class="fas fa-cloud-upload-alt text-gray-300 text-6xl dark:text-gray-600"></i>
                </div>
                <h3 class="text-lg font-medium text-gray-900 dark:text-white">Your library is empty</h3>
                <p class="mt-1 text-gray-500 dark:text-gray-400">Upload a PDF or EPUB to get started.</p>
            </div>
            <% } else { %>
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
                    <% books.forEach(book=> { %>
                        <div
                            class="bg-white rounded-xl shadow-sm hover:shadow-md transition overflow-hidden border border-gray-100 flex flex-col h-full group dark:bg-gray-800 dark:border-gray-700">
                            <div class="h-40 bg-gray-100 flex items-center justify-center relative dark:bg-gray-700">
                                <!-- Placeholder Cover -->
                                <i
                                    class="fas fa-file-<%= book.format === 'pdf' ? 'pdf' : 'alt' %> text-5xl <%= book.format === 'pdf' ? 'text-red-400' : 'text-green-400' %>"></i>
                                <span
                                    class="absolute top-2 right-2 bg-white px-2 py-0.5 rounded text-xs font-bold uppercase tracking-wide text-gray-500 shadow-sm dark:bg-gray-600 dark:text-gray-200">
                                    <%= book.format %>
                                </span>
                            </div>
                            <div class="p-5 flex-1 flex flex-col">
                                <h3 class="font-semibold text-gray-900 truncate mb-1 dark:text-white"
                                    title="<%= book.title %>">
                                    <%= book.title %>
                                </h3>
                                <p class="text-xs text-gray-500 mb-4 dark:text-gray-400">Added <%= new
                                        Date(book.uploadedAt).toLocaleDateString() %>
                                </p>

                                <div class="mt-auto flex gap-2">
                                    <a href="/book/<%= book.id %>"
                                        class="flex-1 bg-indigo-50 hover:bg-indigo-100 text-indigo-700 text-center py-2 rounded-lg text-sm font-medium transition dark:bg-gray-700 dark:text-indigo-300 dark:hover:bg-gray-600">
                                        Read
                                    </a>
                                    <button onclick="deleteBook('<%= book.id %>')"
                                        class="px-3 py-2 bg-red-50 hover:bg-red-100 text-red-600 rounded-lg transition dark:bg-gray-700 dark:text-red-400 dark:hover:bg-gray-600">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                </div>
                <% } %>

    </main>

    <!-- Upload Modal -->
    <div id="uploadModal"
        class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50 flex items-center justify-center backdrop-blur-sm">
        <div
            class="relative mx-auto p-8 border w-96 shadow-lg rounded-xl bg-white dark:bg-gray-800 dark:border-gray-700">
            <h3 class="text-lg font-bold text-gray-900 mb-4 dark:text-white">Upload New Book</h3>
            <form action="/upload" method="POST" enctype="multipart/form-data">
                <div class="mb-4">
                    <label class="block text-gray-700 text-sm font-bold mb-2 dark:text-gray-300">Book Title
                        (Optional)</label>
                    <input type="text" name="title"
                        class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white dark:focus:ring-indigo-400">
                </div>
                <div class="mb-6">
                    <label class="block text-gray-700 text-sm font-bold mb-2 dark:text-gray-300">File (PDF or
                        EPUB)</label>
                    <input type="file" name="bookFile" accept=".pdf,.epub" required
                        class="w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100 dark:text-gray-400 dark:file:bg-gray-700 dark:file:text-indigo-300">
                </div>
                <div class="flex justify-end gap-3">
                    <button type="button" onclick="document.getElementById('uploadModal').classList.add('hidden')"
                        class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition dark:bg-gray-700 dark:text-gray-300 dark:hover:bg-gray-600">Cancel</button>
                    <button type="submit"
                        class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition dark:bg-indigo-500 dark:hover:bg-indigo-600">Upload</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        // Dark Mode Toggle Logic
        const themeToggleBtn = document.getElementById('themeToggle');

        themeToggleBtn.addEventListener('click', function () {
            // toggle icons inside button
            if (localStorage.theme === 'dark') {
                localStorage.theme = 'light';
                document.documentElement.classList.remove('dark');
            } else {
                localStorage.theme = 'dark';
                document.documentElement.classList.add('dark');
            }
        });

        async function deleteBook(id) {
            if (!confirm('Are you sure you want to delete this book?')) return;

            try {
                const res = await fetch(`/api/book/${id}`, { method: 'DELETE' });
                if (res.ok) window.location.reload();
                else alert('Failed to delete book');
            } catch (e) {
                console.error(e);
                alert('Error deleting book');
            }
        }

        // Close modal on outside click
        window.onclick = function (event) {
            const modal = document.getElementById('uploadModal');
            if (event.target == modal) {
                modal.classList.add('hidden');
            }
        }
    </script>
</body>

</html>